# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ================================
# Database
# ================================
# Local development
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/prompt_studio?schema=public"

# Docker (uncomment when using docker-compose)
# DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/prompt_studio?schema=public"

# Database credentials (for docker-compose)
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=prompt_studio
DB_PORT=5432

# ================================
# Redis (Optional)
# ================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ================================
# CORS
# ================================
CORS_ORIGIN=http://localhost:5173

# ================================
# OAuth - Google
# ================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# ================================
# OAuth - GitHub
# ================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# ================================
# Frontend URL (for redirects)
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# Docker Compose Ports
# ================================
API_PORT=3001
ADMINER_PORT=8080
